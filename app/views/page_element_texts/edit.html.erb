<section class="section-4">
  <div class="container">
    <%= form_for @page_element_text, class: 'form' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <label class="col-sm-2 control-label">Key</label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= @page_element_text.key %></p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :value, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <% if params[:markdown] == 'true' %>
            <%= f.text_area :value, auto_focus: true, rows: 10, class: 'form-control', id: 'editor' %>
          <% else %>
            <%= f.text_area :value, auto_focus: true, rows: 10, class: 'form-control' %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Update', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</section>
