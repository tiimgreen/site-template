<section class="section-4">
  <div class="container">
    <%= form_for @page_element_link, class: 'form' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <label class="col-sm-2 control-label">Key</label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= @page_element_link.key %></p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :text, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :text, auto_focus: true, rows: 10, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :link, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :link, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Update', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</section>
